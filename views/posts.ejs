<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Posts - Blog App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Blog App</a>
            <div class="navbar-nav ms-auto">
                <% if (user) { %>
                    <a class="nav-link" href="/posts">All Posts</a>
                    <a class="nav-link" href="/posts/new">New Post</a>
                    <a class="nav-link" href="/logout">Logout (<%= user.name %>)</a>
                <% } else { %>
                    <a class="nav-link" href="/login">Login</a>
                    <a class="nav-link" href="/register">Register</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>All Blog Posts</h2>
        <% if (user) { %>
            <a href="/posts/new" class="btn btn-primary mb-3">Write New Post</a>
        <% } %>

        <% if (posts.length === 0) { %>
            <div class="alert alert-info">No posts yet. Be the first to write one!</div>
        <% } else { %>
            <% posts.forEach(post => { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.title %></h5>
                        <p class="card-text"><%= post.content.substring(0, 200) %>...</p>
                        <p class="text-muted">By <%= post.User.name %> on <%= post.createdAt.toDateString() %></p>
                        <a href="/posts/<%= post.id %>" class="btn btn-outline-primary">Read More</a>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>
