<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BlogApp Selenium Test Suite" verbose="2" parallel="false">
    
    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter"/>
    </listeners>
    
    <test name="BlogApp Functional Tests">
        <classes>
            <!-- Registration Tests (Tests 1-4) -->
            <class name="com.blogapp.tests.RegistrationTest"/>
            
            <!-- Login Tests (Tests 5-8) -->
            <class name="com.blogapp.tests.LoginTest"/>
            
            <!-- Home Page Tests (Tests 9-13) -->
            <class name="com.blogapp.tests.HomePageTest"/>
            
            <!-- Blog Post Tests (Tests 14-16) -->
            <class name="com.blogapp.tests.BlogPostTest"/>
        </classes>
    </test>
    
</suite>
